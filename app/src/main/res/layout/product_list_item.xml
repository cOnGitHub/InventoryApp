<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/colorListItemBackgroundLight"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorListItemBackground"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/default_padding_left"
        android:paddingRight="@dimen/default_padding_right"
        android:paddingTop="@dimen/list_item_padding_top"
        android:paddingBottom="@dimen/list_item_padding_bottom">

        <TextView
            android:id="@+id/price_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textStyle="italic"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="â‚¬2.44" />

        <TextView
            android:id="@+id/product_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:layout_gravity="center_vertical"
            android:text="Bananas"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100"
            android:textAppearance="?android:textAppearanceLarge" />

        <Button
            android:id="@+id/sales_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sales_button_text"
            android:textAppearance="?android:textAppearanceLarge"/>
    </LinearLayout>

</LinearLayout>